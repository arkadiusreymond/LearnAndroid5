<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/lightMustard</item>
        <item name="colorControlActivated">@color/grey</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="ratingBarStyle">@style/RatingBar</item>
    </style>

</resources>
